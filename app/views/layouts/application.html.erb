<!DOCTYPE html>
<html>
  <head>
    <title>InLink</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <% if current_user %>
      <script>
        window.currentUser = <%= render(
          '/api/users/user.json.jbuilder',
          user: current_user
        ).html_safe %>
      </script>
    <% end %>
    <script>
      window.splashImg = '<%= image_url('splashImg.png')%>';
      window.fullLogo = '<%= image_url('InLink_full_logo.png')%>'
      window.iconLogo = '<%= image_url('InLink_icon_logo.png')%>'
    </script>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
